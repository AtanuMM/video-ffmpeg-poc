# ---- FFmpeg encoder defaults ----
VIDEO_ENCODER=h264_vaapi
VIDEO_CRF=23              # quality (lower = better, bigger file)
VIDEO_PRESET=veryfast     # kept for x264 paths; VAAPI ignores most presets
VAAPI_DEVICE=/dev/dri/renderD128

# Watermark (you can disable for pure speed tests)
WATERMARK_ENABLED=true
WATERMARK_TEXT=Â© Demo Watermark
WATERMARK_POINTSIZE=28
WATERMARK_OPACITY=35
WATERMARK_INSET=12
